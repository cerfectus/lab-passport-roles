<form
  {{#if signup}}
    action="/auth/signup"  
    {{else if admin}}
      action="/auth/login"
    {{else if admin}}
      action="auth/admin/create/"
  {{/if}}
  method="POST" enctype="application/x-www-form-urlencoded">
  <input type="text" placeholder="&ensp;Username" name="username" autofocus>
  <input type="password" placeholder="&ensp;Password" name="password">
  {{#if login}}
    {{else}}
      <select name="role">
        <option selected disabled>&ensp;Role</option>
        <option value="boss">admin</option>
        <option value="dev">Developer</option>
        <option value="view">Viewer</option>
      </select>
  {{/if}}
  <button type="submit">
    {{#if signup}}
      Register
      {{else if login}}
        Log in
      {{else if admin}}
        Create
    {{/if}}
  </button>
</form>
<p style="color: red;">{{errorMessage}}</p>